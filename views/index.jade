!!! 5
html(lang="en")
  head
    meta(name='viewport', content='initial-scale\=1.0, user-scalable\=no') 
    title= pageTitle
    style
      \#map_canvas { height: 100%; float: left; width: 568px; }
       html { height: 100%; font-size: 10px; font-family: verdana; }
       body { height: 100%; margin: 0px; padding: 0px; width: 768px; background-color: #eeeeee; }
      .eventful-badge, .eventful-badge * { margin: 0; padding: 0; border: 0; text-align: center;  font-family: Arial; text-decoration: none;}
      .eventful-large { position: relative; width: 140px; font-size: 15px; line-height: 17px; font-weight: bold;}
      .eventful-medium { position: relative; width: 100px; font-size: 12px; line-height: 13px; }                     
      .eventful-small { position: relative; width: 100px; font-size: 11px; line-height: 11px; }
      .bottom { position: absolute; top: 605px; text-align: center; width: 200px;}
      \#control-container { width: 200px; height: 100%; float: left; }
      \#category-list { z-index: 1; }
      \#logo { letter-spacing: 7px; color: #FA7D16; width: 100%; text-align: center; font-family: fantasy; position: relative;} 
      \#logo .s { font-size: 14px;}
      \#logo .h { font-size: 13px;}
      \#logo .o { font-size: 13px;}
      \#logo .w { font-size: 13px;}
      \#logo .z { font-size: 13px;}
      \#logo .i { font-size: 14px;}
      .linethrough { z-index: -1; position: absolute; top: 55%; height: 36%; width: 34%; background-color: #000000; left: 32%; } 
      \#category-list .dijitButtonNode { width: 190px; } 
      \#category-list .dijitMenu { width: 190px; } 
      .event_item { text-align: right; color: #000000; padding: 3px; border-bottom: 1px dashed #ccc;  cursor: pointer; }
      .event_item .image { border: 1px solid #ccc; float: left; display: block; width: 48px; height: 48px; }
      .event_item .title {text-align: left; font-weight: bold; clear: right; float: left; margin-left: 2px; width: 106px; }
      .evetn_item .icons { width: 15px; margin:0 2px; float: left; }
      .event_item .description { }
      .event_item .start_time { }
      .event_item .stop_time { }
      .event_item .image_title { height: 50px; }
      \#event_list { height: 545px; overflow-y: scroll; border-top: 1px solid #ccc;  border-bottom: 1px solid #ccc;}
      \#downloadProgress { opacity: 0; width: 194px; margin: 0 4px 0 2px;}
    script(src='http://ajax.googleapis.com/ajax/libs/dojo/1.6/dojo/dojo.xd.js',djConfig='parseOnLoad: true')
    script(src='http://maps.google.com/maps/api/js?sensor=true')
    script(src='http://127.0.0.1:3000/js/map_init.js')
    script(src='http://127.0.0.1:3000/js/util.js')
    link(rel='stylesheet',type='text/css',href='http://ajax.googleapis.com/ajax/libs/dojo/1.6/dijit/themes/tundra/tundra.css')
  body(class='tundra')
    div#control-container
      div#logo
        span.s S
        span.h H
        span.o O
        span.w W
        span.z Z
        span.i I
        div.linethrough
      span#category-list
      div(dojoType="dijit.ProgressBar",jsId="jsProgress",id="downloadProgress", maximum="10")
      div#event_list
      div#widgetContainer
      div.eventful-badge.eventful-small.bottom
        img(src='http://api.eventful.com/images/powered/eventful_58x20.gif',alt='Local Events, Concerts, Tickets')
        p
          a(href='http://eventful.com/') Events by Eventful
    div#map_canvas
